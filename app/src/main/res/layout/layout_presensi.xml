<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:background="#ADB4ABAB"
    android:id="@+id/matkul_id">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@drawable/layout_bg_image">

            <TextView
                android:id="@+id/matkul_presen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/mhs_icon"
                android:layout_toEndOf="@+id/mhs_icon"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:textSize="15dp"
                android:text="Grafiters"/>
            <TextView
                android:id="@+id/kelas_presen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/mhs_icon"
                android:layout_toEndOf="@+id/mhs_icon"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_below="@id/matkul_presen"
                android:textSize="15dp"
                android:text="A11.2017.10284"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/cardview_light_background"
            android:gravity="center">
            <TextView
                android:id="@+id/result_presen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="78%"
                android:textSize="25dp"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>