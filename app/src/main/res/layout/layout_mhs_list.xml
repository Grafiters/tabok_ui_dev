<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@color/colorBlue">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@drawable/layout_bg_image">
    <ImageView
        android:id="@+id/mhs_icon"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:scaleType="centerCrop"
        android:background="@drawable/layout_bg_image"
        android:padding="5dp"
        android:src="@mipmap/ic_launcher_round"/>
    <TextView
        android:id="@+id/mhs_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/mhs_icon"
        android:layout_toEndOf="@+id/mhs_icon"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:textColor="#000"
        android:textSize="13dp"
        android:text="Grafiters"/>
    <TextView
        android:id="@+id/mhs_nim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/mhs_icon"
        android:layout_toEndOf="@+id/mhs_icon"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_below="@id/mhs_name"
        android:textColor="#000"
        android:textSize="13dp"
        android:text="A11.2017.10284"/>
    <TextView
        android:id="@+id/mhs_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/mhs_icon"
        android:layout_toEndOf="@+id/mhs_icon"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_below="@id/mhs_nim"
        android:textColor="#000"
        android:textSize="13dp"
        android:text="bayugrafit@gmail.com"/>
    </RelativeLayout>

</RelativeLayout>